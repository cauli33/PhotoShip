<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_menu_general"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.emmaveillat.finalproject.MenuGeneral">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="115dip"
        android:id="@+id/filterscrollview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="140dip"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="wrap_content">

                <ImageButton
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:id="@+id/original"
                    android:background="@drawable/original" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dip"
                    android:text="Original"
                    android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="wrap_content">

                <ImageButton
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:id="@+id/gray"
                    android:background="@drawable/gris" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dip"
                    android:text="Noir et Blanc"
                    android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="wrap_content">

                <ImageButton
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:id="@+id/sepia"
                    android:background="@drawable/sepia"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dip"
                    android:text="Sepia"
                    android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="wrap_content">

                <ImageButton
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:id="@+id/invert"
                    android:background="@drawable/negatif" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dip"
                    android:text="Négatif"
                    android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="wrap_content">

                <ImageButton
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:id="@+id/moy"
                    android:background="@drawable/filtre_moyenne"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dip"
                    android:text="Flou"
                    android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="wrap_content">

                <ImageButton
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:id="@+id/sobel"
                    android:background="@drawable/sobel"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dip"
                    android:text="Sobel"
                    android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="wrap_content">

                <ImageButton
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:id="@+id/laplacien"
                    android:background="@drawable/laplacien"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dip"
                    android:text="Laplacien"
                    android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="wrap_content">

                <ImageButton
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:id="@+id/filtre"
                    android:background="@drawable/rose"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dip"
                    android:text="Filtre couleur"
                    android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="center"/>
            </LinearLayout>


            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="wrap_content">

                <ImageButton
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:id="@+id/teinte"
                    android:background="@drawable/une_couleur"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dip"
                    android:text="Choix couleur"
                    android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="wrap_content">

                <ImageButton
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:id="@+id/HE"
                    android:background="@drawable/egalisationhistogramme"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dip"
                    android:text="Égalisation histo"
                    android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="wrap_content">

                <ImageButton
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:id="@+id/ED"
                    android:background="@drawable/extensiondynamique"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dip"
                    android:text="Extension dynamique"
                    android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="wrap_content">

                <ImageButton
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:id="@+id/pencil1"
                    android:background="@drawable/dessin1"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dip"
                    android:text="Effet dessin 1"
                    android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="wrap_content">

                <ImageButton
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:id="@+id/pencil2"
                    android:background="@drawable/dessin2"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dip"
                    android:text="Effet dessin 2"
                    android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="wrap_content">

                <ImageButton
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:id="@+id/pencil3"
                    android:background="@drawable/dessin3"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dip"
                    android:text="Effet dessin 3"
                    android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="wrap_content">

                <ImageButton
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:id="@+id/cartoon"
                    android:background="@drawable/cartoon"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dip"
                    android:text="Cartoon"
                    android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="center"/>
            </LinearLayout>

            <Button
                android:text="HSV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/color" />
        </LinearLayout>

    </HorizontalScrollView>


    <ImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/filterscrollview"
        android:scaleType="center"
        android:background="#e5e5e5"
        android:layout_gravity="center">
    </ImageView>

    <ImageButton
        android:id="@+id/finger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dip"
        android:background="@mipmap/ic_fingerprint"/>

    <Switch
        android:id="@+id/zoomswitch"
        android:layout_width="wrap_content"
        android:layout_height="35dip"
        android:layout_toLeftOf="@id/finger"
        android:layout_toStartOf="@id/finger"/>

    <ImageButton
        android:id="@+id/zoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/zoomswitch"
        android:layout_toStartOf="@id/zoomswitch"
        android:layout_marginTop="2dip"
        android:background="@android:drawable/ic_menu_zoom"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/seekbars_interface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.emmaveillat.finalproject.GeneralMenu">
        <Button
            android:text="Valider"
            android:layout_width="180dip"
            android:layout_height="40dip"
            android:id="@+id/ok"
            android:layout_alignParentBottom="true"/>

        <Button
            android:text="Annuler"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:id="@+id/cancel"
            android:layout_toRightOf="@id/ok"
            android:layout_toEndOf="@id/ok"
            android:layout_alignParentBottom="true"/>

        <Button
            android:text="Test"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:id="@+id/test"
            android:layout_above="@id/ok"/>

        <SeekBar
            android:id="@+id/seekbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="0"
            android:layout_above="@id/test"
            android:layout_marginBottom="10dip"/>

        <TextView
            android:id="@+id/textsb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/seekbar1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/valsb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/seekbar1"
            android:layout_toEndOf="@id/textsb1"
            android:layout_toRightOf="@id/textsb1"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <SeekBar
            android:id="@+id/seekbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="0"
            android:layout_above="@+id/textsb1" />

        <TextView
            android:id="@+id/textsb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/seekbar2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/valsb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/seekbar2"
            android:layout_toEndOf="@id/textsb2"
            android:layout_toRightOf="@id/textsb2"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <SeekBar
            android:id="@+id/seekbar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="0"
            android:layout_above="@+id/textsb2" />

        <TextView
            android:id="@+id/textsb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/seekbar2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/valsb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/seekbar3"
            android:layout_toEndOf="@id/textsb3"
            android:layout_toRightOf="@id/textsb3"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/show_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.emmaveillat.finalproject.GeneralMenu">

        <ImageView
            android:layout_width="40dip"
            android:layout_height="20dip"
            android:id="@+id/color_left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:layout_width="40dip"
            android:layout_height="20dip"
            android:id="@+id/color_mid"
            android:layout_toRightOf="@id/color_left"/>

        <ImageView
            android:layout_width="40dip"
            android:layout_height="20dip"
            android:id="@+id/color_right"
            android:layout_toRightOf="@id/color_mid"/>

        </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/crop_interface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.emmaveillat.finalproject.GeneralMenu">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/crop"
            android:text="Rogner"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/ic_crop_top"/>

        <SeekBar
            android:id="@+id/seekbarcrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="0"
            android:max="100"
            android:layout_above="@+id/crop" />

        <TextView
            android:id="@+id/textcrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/seekbarcrop"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/top"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_crop_top"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bot"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/textcrop"
            android:src="@mipmap/ic_crop_bot"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/left"
            android:src="@mipmap/ic_crop_left"
            android:layout_below="@+id/top"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="120dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/right"
            android:src="@mipmap/ic_crop_right"
            android:layout_below="@+id/top"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="120dp" />


    </RelativeLayout>



</RelativeLayout>

