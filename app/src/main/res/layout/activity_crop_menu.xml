<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_crop_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.emmaveillat.finalproject.CropMenu">

    <Button
        android:text="Annuler les modifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reset"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Hauteur : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/facX"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:id="@+id/facY" />

    <Button
        android:text="Rogner l'image !"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/crop"
        android:layout_above="@+id/save"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Sauvegarder mon image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/save"
        android:layout_above="@+id/reset"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/facY"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/pictureCroped"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_above="@+id/facY"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        </ImageView>
    </ScrollView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/newHeigh"
        android:layout_below="@+id/facY"
        android:layout_alignLeft="@+id/facY"
        android:layout_alignStart="@+id/facY" />

    <TextView
        android:text="Longueur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/facX"
        android:layout_above="@+id/newWidth"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/newWidth"
        android:layout_above="@+id/crop"
        android:layout_toLeftOf="@+id/facY"
        android:layout_toStartOf="@+id/facY"
        android:layout_marginRight="80dp"
        android:layout_marginEnd="80dp" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/help_crop"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        android:layout_above="@+id/crop"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
