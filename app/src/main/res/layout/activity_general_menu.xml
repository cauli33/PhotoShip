<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_general_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.emmaveillat.finalproject.GeneralMenu">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        android:id="@+id/aide_ppv"
        android:layout_alignTop="@+id/ppv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        android:id="@+id/aide_pinch"
        android:layout_alignTop="@+id/pinch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        android:layout_alignTop="@+id/filtre"
        android:layout_alignLeft="@+id/aide_ppv"
        android:layout_alignStart="@+id/aide_ppv"
        android:id="@+id/aide_filtre" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        android:id="@+id/aide_couleur"
        android:layout_alignTop="@+id/couleur"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Modifier la couleur, la luminosité et la saturation de l'image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/couleur"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gris"/>

    <Button
        android:text="Déformer l'image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ppv"
        android:layout_above="@+id/pinch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Voir l'image plus en détail (pinch zoom)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pinch"
        android:layout_marginBottom="13dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Mettre un filtre de couleur aléatoire sur l'image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/filtre"
        android:layout_above="@+id/aide_ppv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Choix teinte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/teinte"
        android:layout_above="@+id/HE"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Égalisation d'histogramme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HE"
        android:layout_above="@+id/aide_filtre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Sépia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sepia"
        android:layout_above="@+id/teinte"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        android:id="@+id/aide_gris"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/aide_couleur"
        android:layout_alignStart="@+id/aide_couleur"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <Button
        android:text="Changer l'image en noir et blanc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gris"
        android:layout_marginRight="90dp"
        android:layout_marginEnd="90dp"
        android:layout_alignBottom="@+id/aide_gris"
        android:layout_toLeftOf="@+id/aide_couleur"
        android:layout_toStartOf="@+id/aide_couleur" />

</RelativeLayout>
