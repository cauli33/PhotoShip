<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_general_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.emmaveillat.finalproject.GeneralMenu">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="115dip"
        android:id="@+id/filterscrollview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="140dip"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="wrap_content">

                <ImageButton
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:id="@+id/gray"
                    android:background="@drawable/gris" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dip"
                    android:text="Noir et Blanc"
                    android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="wrap_content">

                <ImageButton
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:id="@+id/sepia"
                    android:background="@drawable/sepia"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dip"
                    android:text="Sepia"
                    android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="wrap_content">

                <ImageButton
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:id="@+id/moy"
                    android:background="@drawable/filtre_moyenne"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dip"
                    android:text="Flou moyenneur"
                    android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="wrap_content">

                <ImageButton
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:id="@+id/gauss"
                    android:background="@drawable/gauss"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dip"
                    android:text="Flou gaussien"
                    android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="wrap_content">

                <ImageButton
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:id="@+id/sobel"
                    android:background="@drawable/sobel"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dip"
                    android:text="Sobel"
                    android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="wrap_content">

                <ImageButton
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:id="@+id/laplacien"
                    android:background="@drawable/laplacien"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dip"
                    android:text="Laplacien"
                    android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="center"/>
            </LinearLayout>


            <ImageButton
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:id="@+id/filtre"
                android:background="@drawable/rose"/>

            <ImageButton
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:id="@+id/HE"
                android:background="@drawable/egalisationhistogramme" />

            <ImageButton
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:id="@+id/ED"
                android:background="@drawable/extensiondynamique"/>

            <ImageButton
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:id="@+id/teinte"
                android:background="@drawable/une_couleur"/>

            <ImageButton
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:id="@+id/crop"
                android:src="@android:drawable/ic_menu_crop"/>

            <Button
                android:text="Zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pinch" />

            <Button
                android:text="HSV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/color" />

            <Button
                android:text="Fond vert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/replace" />

            <Button
                android:text="Finger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/finger"/>

            <Button
                android:text="DÃ©former l'image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ppv"/>
        </LinearLayout>

    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/filterscrollview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <ImageView
                android:id="@+id/picture"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:scaleType="center"
                android:layout_above="@id/filterscrollview">
            </ImageView>
        </ScrollView>
    </HorizontalScrollView>


</RelativeLayout>

