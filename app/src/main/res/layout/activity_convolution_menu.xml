<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_zoom_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.emmaveillat.finalproject.ConvolutionMenu">

    <Button
        android:text="Annuler les modifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reset"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/newLength"
        android:layout_marginRight="196dp"
        android:layout_marginEnd="196dp"
        android:layout_above="@+id/moy"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="ParamÃ¨tre filtre moyenneur :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/facX"
        android:layout_above="@+id/newLength"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Cartoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cartoon"
        android:layout_toEndOf="@+id/save"
        android:layout_toRightOf="@+id/save"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/reset"/>

    <Button
        android:text="Moy"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/moy"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/save" />

    <Button
        android:text="Gauss"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/gauss"
        android:layout_toEndOf="@+id/moy"
        android:layout_toRightOf="@+id/moy"
        android:layout_above="@+id/save"/>

    <Button
        android:text="Sobel"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/sobel"
        android:layout_toEndOf="@+id/gauss"
        android:layout_toRightOf="@+id/gauss"
        android:layout_above="@+id/save"/>

    <Button
        android:text="Laplacien"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/lapla"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/sobel"
        android:layout_toRightOf="@+id/sobel"
        android:layout_above="@+id/save"/>

    <Button
        android:text="Sauvegarder mon image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save"
        android:layout_above="@+id/reset"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/facX"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/picture"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_above="@+id/facX"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        </ImageView>
    </ScrollView>

</RelativeLayout>